# ============================================
# TradeHax Backend - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# CRITICAL: Never commit .env file to git!

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=3001
BACKEND_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# ============================================
# Security & JWT
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secure-jwt-secret-here-change-in-production

# ============================================
# Discord OAuth
# ============================================
DISCORD_CLIENT_ID=1450053974018494515
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_REDIRECT_URI=http://localhost:3001/auth/oauth/discord/callback
DISCORD_STATE_KEY=dev-state-key-12345
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_GUILD_ID=your-discord-server-id

# ============================================
# Discord Webhook (For Event Notifications)
# ============================================
# This webhook sends real-time alerts for errors, deployments, and health checks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/1450096243538919445/tPN4Z77QrHEi-cvUgwuJAEpQfTSt9mXsLjI2NFCjJ4IEpN7Ze9tN38GlCPb8NltHYIZV

# ============================================
# Google/Gmail OAuth
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/oauth/gmail/callback
GOOGLE_STATE_KEY=google-state-key-for-csrf-protection

# ============================================
# Database (Optional - for production)
# ============================================
# DATABASE_URL=postgresql://user:password@db.example.com:5432/tradehax

# ============================================
# Feature Flags
# ============================================
ENABLE_WEB3_AUTH=true
ENABLE_DISCORD_AUTH=true
ENABLE_GMAIL_AUTH=true
ENABLE_DISCORD_BOT=false
ENABLE_RATE_LIMITING=true

# ============================================
# Monitoring & Analytics
# ============================================
# SENTRY_DSN=https://key@sentry.io/project-id
# LOG_LEVEL=info
